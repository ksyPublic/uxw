                        </button>
                    </div>

                    {% include 'contents/sorting.njk'%}
                </div>
            </div>
            <!-- //검색박스 영역 -->
            <div class="ly-content__inner">
                <div class="accordion" data-ui-accordion data-accordion-onlyOne="true">
                    <div class="accordion__box">
                        {% import 'macros/notice-accordion-macro.njk' as accordion %}
                        {% for acc in accordionData %}
                            {{ accordion.item(
                                pind=acc.pind,
                                text=acc.text,
                                headerId=acc.headerId + loop.index,
                                panelId=acc.panelId + loop.index,
                                panelText=acc.panelText,
                                count=loop.index,
                                columnDate=acc.date,
                                btndownload=acc.btndown,
                                option=acc.option
                            )}}
                        {% endfor %}
                    </div>
                </div>

                {% include 'base/pagination.njk'%}
            </div>
        </div>
    </div>

