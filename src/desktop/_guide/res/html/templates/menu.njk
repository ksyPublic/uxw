{% set navigation = [
    {
        'id': 'accordion__content1',
        'header': 'accordion__header1',
        'name': 'Layout',
        'children': [
            {
                'name': 'Header',
                'url': 'index.html',
                'alt': '헤더 바로가기'
            }
        ]
    }, {
        'id': 'accordion__content2',
        'header': 'accordion__header2',
        'name': 'Components',
        'children': [
            {
                'name': 'Tabs',
                'url': './tabs.html',
                'alt': '탭 바로가기',
                'id': 'accordion__content2',
                'header': 'accordion__header2'
            }, {
                'name': 'accordionordion',
                'url': './accordion.html',
                'alt': '아코디언 바로가기',
                'id': 'accordion__content3',
                'header': 'accordion__header3'
            }
        ]
    }, {
        'id': 'accordion__content3',
        'header': 'accordion__header3',
        'name': 'Elements',
        'children': [
            {
                'name': 'Button',
                'url': './button.html',
                'alt': '버튼 바로가기',
                'id': 'accordion__content4',
                'header': 'accordion__header4'
            }, {
                'name': 'Text',
                'url': './text.html',
                'alt': '텍스트 바로가기',
                'id': 'accordion__content5',
                'header': 'accordion__header5'
            }, {
                'name': 'Form',
                'url': './form.html',
                'alt': '폼 바로가기',
                'id': 'accordion__content6',
                'header': 'accordion__header6'
            }
        ]
    }
] %}

{% block content %}
    <div class="guide__menu">
        <nav class="guide__menu__nav">
            <div class="accordion" data-ui-accordion data-accordion-default="0">
                <div class="accordion__box">
                    {% for item in navigation %}
                        <div class="accordion__item">
                            {% if item.children %}
                                <div class="accordion__head">
                                    <div class="accordion__head__inner">
                                        <strong>{{item.name}}</strong>
                                        <button class="accordion__button" id="{{item.header}}" type="button" aria-expanded="false" aria-controls="{{item.id}}" aria-label="버튼"></button>
                                    </div>
                                    <div class="accordion__panel expand" id="{{item.id}}" aria-labelledby="{{item.header}}">
                                        {% for child in item.children %}
                                            <a class="text-link" href="{{child.url}}" alt="{{child.alt}}">{{child.name}}</a>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% else %}
                                <a class="text-link" href="{{item.url}}" alt="{{item.alt}}">{{item.name}}</a>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </nav>
    </div>
{% endblock %}