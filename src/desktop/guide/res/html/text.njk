{% extends "../templates/layout.njk" %}
{% block content %}
    <div class="guide-wrap">
        <h2 class="ex-name">Text</h2>
        <div class="ex-content">
            <div class="ex-title">
                <h3>기본</h3>
                <p class="ex-desc">기본 Text입니다.
                <br/>* 텍스트의 굵기는 light, medium, bold로 조정가능합니다.
                <br/>* 텍스트의 사이즈는 14px, 18px, 20px, 24px, 28px을 제공합니다.
                </p>
            </div>

            <div class="ex-body">
                <div class="ex-preview">
                    <p class="text ft14">텍스트</p>
                    <span class="text ft18">텍스트</span>
                    <h1 class="text ft20">텍스트</h1>
                    <h2 class="text ft24">텍스트</h2>
                    <h3 class="text ft28">텍스트</h3>

                    <h4 class="text ft28 light">텍스트</h4>
                    <h5 class="text ft28 medium">텍스트</h5>
                    <b class="text ft28 bold">텍스트</b>

                    <div class="html-view">
                        <pre>
                        <code class="ex-code-block render-html">
                            <p class="text ft14">텍스트</p>
                            <span class="text ft18">텍스트</span>
                            <h1 class="text ft20">텍스트</h1>
                            <h2 class="text ft24">텍스트</h2>
                            <h3 class="text ft28">텍스트</h3>

                            <h4 class="text ft28 light">텍스트</h4>
                            <h5 class="text ft28 medium">텍스트</h5>
                            <b class="text ft28 bold">텍스트</b>
                        </code>
                    </pre>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}